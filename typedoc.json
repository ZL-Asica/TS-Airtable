{
  "entryPoints": [
    "src"
  ],
  "out": "docs/api", // Output directory
  "plugin": ["typedoc-plugin-markdown"], // Use the markdown plugin
  "tsconfig": "tsconfig.json", // Use this tsconfig file
  "exclude": ["src/__tests__/**/*.test.ts", "node_modules", "dist", "docs"], // Exclude these directories
  "excludeExternals": true,
  "excludePrivate": true,
  "excludeProtected": true,
  "hideGenerator": true,
  "readme": "none",
  "categorizeByGroup": true,
  "sort": ["source-order"]
}
